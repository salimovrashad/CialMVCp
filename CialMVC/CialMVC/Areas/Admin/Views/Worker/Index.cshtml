@model List<WorkerListItemVM>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <a class="btn btn-primary" asp-controller="Worker" asp-action="Create">Create Worker</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">ImageURL</th>
                <th scope="col">Name</th>
                <th scope="col">SM</th>
                <th colspan="2" scope="col">Handle</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td><img width="100" src="~/@item.ImageURL" /></td>
                    <td>@item.Name</td>
                    <td>
                        @string.Join(",", item.SocialMedias.Select(x => x.Name))
                    </td>
                    <td><a class="btn btn-success" asp-action="Update" asp-controller="Worker" asp-route-id="@item.Id">EDIT</a></td>
                    <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Worker" asp-route-id=@item.Id>DELETE</a></td>
                </tr>
            }

        </tbody>
    </table>
</div>